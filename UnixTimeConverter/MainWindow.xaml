<Window x:Class="UnixTimeConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnixTimeConverter"
        mc:Ignorable="d"
        Title="UnixTime Converter" Height="450" Width="800"
        Background="#191919"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True">
    <StackPanel>
        <StackPanel Width="800" >
            <Image x:Name="CloseButton"  Canvas.Top="5" HorizontalAlignment="Right" Source="./assets/close-icon.png" Width="25" Height="25" MouseUp="UIElement_OnMouseUp" MouseEnter="UIElement_OnMouseEnter" />    
        </StackPanel>
        
        <Label Foreground="#E0E0E0" Margin="0, 10, 0, 0" FontFamily="Roboto" FontSize="30">Unix Converter</Label>
    </StackPanel>
</Window>
